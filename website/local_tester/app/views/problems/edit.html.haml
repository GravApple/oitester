%h2.page-header Edit problem
= simple_form_for @problem do |f|
  = f.input :name, required: true, input_html: { class: 'form-control' }
  = f.input :time_limit, as: :integer, input_html: { class: 'form-control' }
  = f.input :memory_limit, as: :integer, input_html: { class: 'form-control' }
  = f.input :description, as: :ckeditor
  = f.input :input_format, as: :ckeditor
  = f.input :output_format, as: :ckeditor
  = f.input :sample_input, input_html: { class: 'form-control' }
  = f.input :sample_output, input_html: { class: 'form-control' }
  = f.input :hint, as: :ckeditor
  %hr
  %h3 Data
  - if @problem.data?
    %p
      = @problem.data.file.filename
      = link_to 'Download', @problem.data_url
  = f.input :data, label: false, as: :file, input_html: { class: 'form-control' }
  = f.input :case_num, as: :integer, input_html: { class: 'form-control' }
  = f.input :case_score, as: :integer, input_html: { class: 'form-control' }
  %br
  = f.submit class: 'btn btn-primary'
  = link_to 'Cancel', :back, class: 'btn btn-default'
